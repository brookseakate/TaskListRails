<main>
  <%= content_tag(:h1) { "Add a new task" } %>
  <%= form_for @task do |f| %>
  <ul>
    <li>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </li>

    <li>
      <%= f.label :description %>
      <%= f.text_field :description %>
    </li>

    <li>
      <%= f.label :completion_status, "Status" %>
      <%= f.select :completion_status, @task_status_options %>
    </li>

    <li>
      <%= f.label :is_complete, "Complete"  %>
      <%= f.check_box :is_complete %>
    </li>

    <li>
      <%= f.label :completed_at, "Date/time completed" %>
      <%= f.date_field :completed_at %>
    </li>
    <%= f.submit %>
    <% end %>
  </ul>
  <p>
    <%= link_to "Go home", tasks_path %>
  </p>
</main>
