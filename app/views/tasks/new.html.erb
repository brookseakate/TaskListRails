<main>
  <%= content_tag(:h1) { "Add a new task" } %>
  <ul>
    <%= form_for @task do |f| %>
    <li>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </li>


    <li>
      <%= f.label :description %>
      <%= f.text_field :description %>
    </li>


    <li>
      <%= f.label :completion_status %>
      <%= f.text_field :completion_status %>
    </li>


    <li>
      <%= f.label :completed_at %>
      <%= f.text_field :completed_at %>
    </li>
    <%= f.submit %>
    <% end %>
  </ul>
</main>
