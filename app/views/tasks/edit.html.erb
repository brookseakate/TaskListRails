<main>
  <%= content_tag(:h1) { "Edit task" } %>
  <ul>
    <%= form_for @task, method: :patch do |f| %>
    <li>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </li>

    <li>
      <%= f.label :description %>
      <%= f.text_field :description %>
    </li>

    <li>
      <%= f.label :completion_status, "Status" %>
      <%= f.text_field :completion_status %>
    </li>

    <li>
      <%= f.label :is_complete, "Complete"  %>
      <%= f.check_box :is_complete %>
    </li>

    <li>
      <%= f.label :completed_at, "Date/time completed" %>
      <%= f.text_field :completed_at %>
    </li>
    <%= f.submit %>
    <% end %>
  </ul>
</main>
