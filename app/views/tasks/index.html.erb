<main>
  <%= content_tag(:h1) { "Task List" } %>
  <%= link_to("Add a new task", new_task_path) %>
  <%= content_tag(:h3) { "Tasks To Do" } %>
  <ul>
    <% @incomplete_tasks.each do |t| %>
    <%= render partial: "index_list", locals: {t:t} %>
    <%= button_to("Mark complete", task_complete_path(t), method: :patch) %>
    </li>
    <p>
    </p>
    <% end %>
  </ul>
  <%= content_tag(:h3) { "Completed Tasks" } %>
  <ul>
    <% @complete_tasks.each do |t| %>
    <%= render partial: "index_list", locals: {t:t} %>
    <% end %>
  </ul>
</main>
